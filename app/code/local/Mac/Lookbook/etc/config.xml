<?xml version="1.0"?>
<config>
  <modules>
    <Mac_Lookbook>
      <version>0.1.0</version>
    </Mac_Lookbook>
  </modules>
  <frontend>
    <routers>
      <lookbook>
        <use>standard</use>
          <args>
            <module>Mac_Lookbook</module>
            <frontName>lookbook</frontName>
          </args>
      </lookbook>
    </routers>
		<layout>
		  <updates>
			<lookbook>
			  <file>lookbook.xml</file>
			</lookbook>
		  </updates>
		</layout>
  </frontend>
  <global>
    <helpers>
      <lookbook>
        <class>Mac_Lookbook_Helper</class>
      </lookbook>
    </helpers>
	<blocks>
	  <lookbook>
		<class>Mac_Lookbook_Block</class>
	  </lookbook>
	</blocks>
	<models>
	  <lookbook>
		<class>Mac_Lookbook_Model</class>
		<resourceModel>lookbook_mysql4</resourceModel>
	  </lookbook>
	  <lookbook_mysql4>
		<class>Mac_Lookbook_Model_Mysql4</class>
		<entities>		  
			  <lookbook>
				<table>lookbook</table>
			  </lookbook>
        </entities>
	  </lookbook_mysql4>
	</models>
	<resources>
	  <lookbook_setup>
		<setup>
		  <module>Mac_Lookbook</module>
		</setup>
		<connection>
		  <use>core_setup</use>
		</connection>
	  </lookbook_setup>
	  <lookbook_write>
		<connection>
		  <use>core_write</use>
		</connection>
	  </lookbook_write>
	  <lookbook_read>
		<connection>
		  <use>core_read</use>
		</connection>
	  </lookbook_read>
	</resources>
  </global>
  <admin>
	<routers>
	  <lookbook>
	    <use>admin</use>
		<args>
		  <module>Mac_Lookbook</module>
		  <frontName>lookbook</frontName>
		</args>
	  </lookbook>
	</routers>
  </admin>
  <adminhtml>
	<menu>
<!-- 	  <lookbook module="lookbook">
		<title>Lookbook</title>
		<sort_order>100</sort_order>
		<children>
		  <lookbook module="lookbook">
		    <title>Manage Lookbook</title>
			<sort_order>0</sort_order>
			<action>lookbook/adminhtml_lookbook</action>
		  </lookbook>
		</children>
	  </lookbook> -->
	</menu>
	<acl>
	  <resources>
		<all>
		  <title>Allow Everything</title>
		</all>
		<admin>
		  <children>
			<lookbook translate="title" module="lookbook">
			  <title>Lookbook</title>
			  <sort_order>1000</sort_order>
			  <children>
		  <lookbook translate="title">
			<title>Manage Lookbook</title>
			<sort_order>0</sort_order>
		  </lookbook>
			  </children>
			</lookbook>
		  </children>
		</admin>
	  </resources>
	</acl>
	<layout>
	  <updates>
		<lookbook>
		  <file>lookbook.xml</file>
		</lookbook>
	  </updates>
	</layout>
  </adminhtml>
</config> 