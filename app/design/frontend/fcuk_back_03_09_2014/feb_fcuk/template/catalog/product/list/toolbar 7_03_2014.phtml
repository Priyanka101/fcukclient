<?php //if($this->getCollection()->getSize()): ?>
 <?php echo $this->getPagerHtml() ?>
<div class="toolbar clear">

    <?php if( $this->isExpanded() ): ?>
    <div class="sorter">
    
        <div class="sort-by">
            <label><?php echo $this->__('Sort By') ?></label>
            <select onchange="setLocation(this.value)">
		    <?php foreach($this->getAvailableOrders() as $_key=>$_order): ?>
				<?php if ($_order != 'Position' && $_order != 'Price' && $_order != 'Coming Soon' && $_order != 'Relevance') : // Remove "Position" from the sort option list ?>
                <option value="<?php echo $this->getOrderUrl($_key, 'asc') ?>"<?php if($this->isOrderCurrent($_key)): ?><?php endif; ?>>
                    <?php echo $this->__($_order) ?>
                </option>
            <?php endif; endforeach; ?>

	            <option value="<?php echo $this->getOrderUrl('price', 'asc') ?>"<?php if($this->isOrderCurrent('price') && $this->getCurrentDirection() == 'asc'): ?>selected="selected"<?php endif; ?>>
                    Price - Low to High
                </option>
                <option value="<?php echo $this->getOrderUrl('price', 'desc') ?>"<?php if($this->isOrderCurrent('price') && $this->getCurrentDirection() == 'desc'): ?>selected="selected"<?php endif; ?>>
                    Price - High to Low
                </option>
            </select>
        </div>
    </div>
    <?php endif; ?>
</div>
